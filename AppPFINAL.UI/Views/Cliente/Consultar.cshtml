@model IEnumerable<AppPFINAL.BD.Modelo.Tarjeta>

@{

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";

}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Consultar mis Tarjetas</title>
    <script type="text/javascript" src="~/Scripts/jquery.table2excel.js"></script>
    <script>
        function GenerarExcel() {

            $('Table').table2excel({ name: "Prueba", filename: "Tarjetas" });

        }
    </script>

</head>

<body>

    <table class="table" id="Table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoTarjeta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LimiteCredito)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.MontoExtra)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.FechaActivacion)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Origen)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.Usuario.Nombre)
            </th>*@
        </tr>

        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoTarjeta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LimiteCredito)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.MontoExtra)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.FechaActivacion)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Origen)
                </td>*@
                @*<td>
                    @Html.DisplayFor(modelItem => item.Usuario.Nombre)
                </td>*@
            </tr>
        }


        <button type="button" class="btn btn-outline-primary  col-2 m-1 h-100" onclick="location.href='@Url.Action("Create", "Cliente")'">
            Agregar otra Solicitud
        </button>
        <button type="button" class="btn btn-outline-primary  col-2 m-1" onclick="location.href='@Url.Action("Index", "Cliente")'">
            Volver
        </button>
        <button type="button" class="btn btn-outline-primary  col-2 m-1" runat="server" onclick="GenerarExcel()">
            Exportar
        </button>


        <hr class="text-primary" />



</body>
</html>
