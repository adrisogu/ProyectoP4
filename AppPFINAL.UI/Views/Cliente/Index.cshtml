
@{
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body >
    <div>
        <div class="mt-2 text-center">
            <h1>Ventana Cliente</h1>
        </div>

        <div class="container-fluid">
            <div class="row row-cols-md-6 g-4 justify-content-center mt-5">
                <div class="">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Solicitar Tarjetas</h5>
                            <p class="card-text">Ingresa para solicitar una tarjeta de Crédito en el sistema</p>
                            <button type="button" class="btn btn-outline-primary w-100" onclick="location.href='@Url.Action("Create", "Cliente")'">
                                Ingresar
                            </button>
                        </div>
                    </div>
                </div>
                <div class="">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Consultar Tarjetas</h5>
                            <p class="card-text">Ingresa para consultar tus tarjetas de crédito en el sistema.</p>
                            <button type="button" class="btn btn-outline-primary w-100" onclick="location.href='@Url.Action("Consultar", "Cliente")'">
                                Ingresar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>  
</body>
</html>
