<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link type="text/css" href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("head", required: false)
</head>
<body class="m-0 p-0">
    <nav class="nav navbar-expand-lg navbar-dark bg-primary text-white">
        <div class="container-fluid">
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <div>
                            <a aria-current="page" href="~/Usuario/MostrarUsuario" class="nav-link active">Registrarse</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <footer class="m-0 bg-primary text-white pt-4 pb-3 bottom-0 position-absolute w-100">
        <div class="container text-white text-md-left">
            <div class="row text-center text-md-left">
                <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                    <strong>&copy; @DateTime.Now.Year - Grupo 2</strong>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
